<script src="~/layui.js" charset="utf-8"></script>
<script>

    layui.use(['laypage', 'form', 'element', 'layer', 'jquery'], function () {
        var carousel = layui.carousel, form = layui.form;
        var element = layui.element;

        var $ = layui.$;
        var laypage = layui.laypage
            , layer = layui.layer;


        var count = 0;
        $(function () {
            load(1);
        });

        //总页数低于页码总数 默认10条每页
        laypage.render({
            elem: 'demo0'
            , count: count //数据总数
            , theme: '#1E9FFF'
            , jump: function (obj) {
                console.log(obj);
                var page = obj.curr;
                load(page);
            }
        });


         function load(page) {
                $.ajax({
                    url: "@Url.Action("GetProductByPage", "XxDoor")",
                    data: { Page: page },
                    async :false,
                    dataType: "json",
                    type: "get",
                    success: function (json) {
                        count = json.total;
                        var data = json.products;
                        var html = "";
                        for (var i = 0; i < data.length; i++) {
                        var obj = data[i];
                        html += "<div class=\"layui-col-xs6\" style=\"padding:10px\">";
                        html += "<div class=\"grid-demo\"><img src=\"/images/Carousel/" + obj.imgSrc +".png\" style=\"width:100%;height:100%\"></div>";
                            html += "</div>";
                                }
                            $(".layui-row").html(html);
                            },
                    complete: function () {
                    }
                });
            }
    });



</script>
